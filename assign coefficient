// assigns new value to specified coefficient
    public void assign_coef(double coef, int exp){

        // if exponent at first node is already equal to passed exponent
        // no search needed, only assignment
        if(this.function.getExp()==exp){

            // if ceoff is zero, check if nodes follow the first
            if(coef==0){

                // reset function back to all zero if no nodes follow first
                if(this.function.getNext()==null) {
                    this.function.setCoeff(0);
                    this.function.setExp(0);

                // eliminate first node because it will be zero
                }else this.function=this.function.getNext();

            // if coeff is not zero, assign value to first node
            }else this.function.setCoeff(coef);

        }else{
            // find the passed exponent within node list because it was not the first term
            TermNode index = TermNode.expSearch(this.function, exp);

            // if exp found, assign new coeff if not zero
            if(index!=null){

                // if coeff is not zero, assign value
                if(coef!=0){

                    // assign coef at index
                    index.setCoeff(coef);
                }else{
                    // if passed coeff is zero,
                    // find node previous to node with exponent equal to exp,
                    // then, delete node with zero being assigned to it
                    for(index=this.function; index!=null && index.getNext()!=null; index=index.getNext()){
                        if(index.getNext().getExp()==exp){
                            index.removeNodeAfter();
                        }
                    }
                }

            // if exp not found in search, create new node if the coeff is not zero
            }else if(coef!=0){
                // if exponent passed is the largest, create new node at beginning
                if(exp>this.function.getExp()){
                        this.function = new TermNode(coef, exp, this.function);
                        removeZeroTerms();

                // if exp is not the largest,
                // find the next node where passed exponent+1 < current node.exp
                // then create new node if not zero, keeping terms in order
                }else{
                    index=this.function;
                    while (index.getNext()!=null && exp<index.getNext().getExp()) {
                        index=index.getNext();
                    }
                    index.addTermAfter(coef, exp);
                }
            }
        }
    }//end method
